@model GOT.Models.SpisTrasPunktowanych

@{
    ViewData["Title"] = "Edit";
}
<div class="table-wrapper">
    <h1>Edycja</h1>

    <h4>Spis Tras Punktowanych</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdS" />
                <div class="form-group">
                    <label asp-for="ValidFrom" class="control-label"></label>
                    <input asp-for="ValidFrom" class="form-control" />
                    <span asp-validation-for="ValidFrom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdO" class="control-label"></label>
                    <select asp-for="IdO" class="form-control" asp-items="ViewBag.IdO"></select>
                    <span asp-validation-for="IdO" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div class="table-wrapper--font-size">
        <a asp-action="Index">Powrót do listy</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
