@model GOT.Models.OdcinekTrasy

@{
    ViewData["Title"] = "Edit";
}
<div class="table-wrapper">
    <h1>Edycja</h1>

    <h4>Odcinek Trasy</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdO" />
                <div class="form-group">
                    <label asp-for="Trail" class="control-label"></label>
                    <input asp-for="Trail" class="form-control" />
                    <span asp-validation-for="Trail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Length" class="control-label"></label>
                    <input asp-for="Length" class="form-control" />
                    <span asp-validation-for="Length" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HeightDiff" class="control-label"></label>
                    <input asp-for="HeightDiff" class="form-control" />
                    <span asp-validation-for="HeightDiff" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Points" class="control-label"></label>
                    <input asp-for="Points" class="form-control" />
                    <span asp-validation-for="Points" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PointStartId" class="control-label"></label>
                    <select asp-for="PointStartId" class="form-control" asp-items="ViewBag.PointStartId"></select>
                    <span asp-validation-for="PointStartId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PointEndId" class="control-label"></label>
                    <select asp-for="PointEndId" class="form-control" asp-items="ViewBag.PointEndId"></select>
                    <span asp-validation-for="PointEndId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div class="table-wrapper--font-size">
        <a asp-action="Index">Powrót do listy</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
